{% extends 'base.html.twig' %}

{% block body %}
<h2 class="h2">Phone Contact List</h2>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Name</th>
        <th scope="col">Phone Number</th>
      </tr>
    </thead>
    <tbody>
      {% for contact in contacts %}
      <tr>
        <th scope="row">{{contact.id}}</th>
        <td>{{contact.name}}</td>
        <td>{{contact.tel}}</td>
        <td><a href="/contact/edit/{{contact.id}}" class="btn btn-info fa fa-pencil"> Edit</a></td>
        <td><a href="/contact/delete/{{contact.id}}" class="btn btn-danger fa fa-trash-o"> Delete</a></td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
